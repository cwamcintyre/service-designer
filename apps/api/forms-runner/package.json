{
  "name": "express-forms-runner",
  "version": "1.0.0",
  "description": "Forms API for the Service Designer Runner",
  "main": "index.js",
  "scripts": {
    "start": "node -r tsconfig-paths/register dist/apps/api/forms-runner/src/index.js",
    "dev": "ts-node-dev --respawn --transpile-only --require tsconfig-paths/register src/index.ts",
    "copy-config": "npx cross-env-shell \"cp tsconfig.json dist\\apps\\api\\forms-runner\\ || copy tsconfig.json dist\\apps\\api\\forms-runner\\ \"",
    "build": "tsc && npm run copy-config",
    "lint": "eslint . --ext .ts",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@azure/cosmos": "^4.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "inversify": "^7.5.1",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "license": "MIT"
}
